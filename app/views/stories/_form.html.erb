<%= form_for @story, :html => { :class => "form-horizontal story" } do |f| %>

    <% if @story.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @story.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :subject, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject, :class => 'form-control' %>
    </div>
    <%= error_span(@story[:subject]) %>
  </div>

  <div class="control-group">
    <%= f.label :mast_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mast_url, :class => 'form-control' %>
    </div>
    <%= error_span(@story[:mast_url]) %>
  </div>

  <div class="control-group">
    <%= f.label :thumb_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :thumb_url, :class => 'form-control' %>
    </div>
    <%= error_span(@story[:thumb_url]) %>
  </div>

  <div class="control-group">
    <%= f.label :headline, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :headline, :class => 'form-control' %>
    </div>
    <%= error_span(@story[:headline]) %>
  </div>

  <div class="control-group">
    <%= f.label :leadline, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :leadline, :class => 'form-control' %>
    </div>
    <%= error_span(@story[:leadline]) %>
  </div>

  <div class="control-group">
    <%= f.label :section_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :section, Section.all, :id, :title, :class => 'form-control' %>
    </div>
    <%= error_span(@story[:section_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            stories_path, :class => 'btn btn-default' %>

<% end %>
