<div class="modal fade" id="quoteEditModal" tabindex="-1" role="dialog" aria-labelledby="quoteEditModal" aria-hidden="true" aria-describedby="" data-backdrop="static">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <span class="modal-title h4"><small>Topic: </small><span id="modalTopicTitle"></span></span>
        <button type="button" class="close pull-right" aria-label="Close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
      </div>
      <form action="" method="">
        
        <div class="modal-body">
        <div class="row">
          <div class="col-xs-4">
            <blockquote>
              <p><span id="elementQuote"></span></p>
              <small><span id="elementQuoted"></span><br><span id="elementQuotedSubline"></span></small>
            </blockquote>
            
            <p class="pa-content"><span id="elementContent"></span></p>
          
          </div><!-- col-xs-4 -->
          
          
          <div class="col-xs-4">
             <div class="form-group">
               <label for="quoteEditTopic">Topic:</label>
               <input type="text" id="quoteEditTopic" name="quoteEditTopic" class="form-control input-sm">
             </div>
            
             <div class="form-group">
               <label for="quoteEditQuote">Quote:</label>
               <textarea class="form-control input-sm" id="quoteEditQuote" rows=7 ></textarea>
             </div> 
            
             <div class="form-group">
               <label for="quoteEditQuoted">Quoted:</label>
               <input type="text" class="form-control input-sm" id="quoteEditQuoted">
             </div>
             
             <div class="form-group">
               <label for="quoteEditQuotedSubline">Quoted Title and/or Organization:</label>
               <input type="text" class="form-control input-sm" id="quoteEditQuotedSubline">
             </div>

          </div><!-- col-xs-4 -->
          
          <div class="col-xs-4">            
            <div class="form-group">
              <label for="quoteEditContent">Content:</label>
              <textarea class="form-control input-sm" id="quoteEditContent" rows=7 ></textarea><div id="quoteEditContentCharNum" class="text-muted small">0 characters</div>
            </div>
            
            <div class="form-group">
              <label for="quoteEditThemeTags">Theme Tags:</label>
              <textarea class="form-control input-sm" id="quoteEditThemeTags" rows=2></textarea>
            </div>
            
            <div class="form-group">
              <label for="quoteEditContextTags">Context Tags:</label>
              <textarea class="form-control input-sm" id="quoteEditContextTags" rows=2></textarea><p class="help-block">Tags are seperated by a return.</p>
            </div>
            
          </div><!-- col-xs-4 -->
          
          </div>
        </div><!-- modal body -->
        
        <div class="modal-footer">
          <div class="form-group">
           <button type="button" class="btn btn-warning pull-left" onclick="resetTextArea('quoteEditContent', 'quoteEditContentCharNum')">Reset form</button>
           <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
           <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div> <!-- modal footer -->
        
      </form> <!-- form -->
      
    </div><!-- modal-content -->
  </div><!-- modal-dialog -->
</div><!-- modal wrapper -->


<script>
  // contentEditContent textarea character counting script
  $('#quoteEditContent').keyup(function (){
    var len = $(this).val().length;    
    if (len == 1) {
      $('#quoteEditContentCharNum').text(len + ' character');
    } else {
      $('#quoteEditContentCharNum').text(len + ' characters');
    }
    
  })
  
  function resetTextArea (element, displayElement){
    var elementExists = document.getElementById(element);
    var displayElementExists = document.getElementById(displayElement);
    
    if (elementExists != null) {
      document.getElementById(element).value = '';
    }
    if (displayElementExists != null) {
      document.getElementById(displayElement).innerHTML = "0 characters"
    }
  }  
  
  
// Modal scripts
$('#quoteEditModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget) // Button that triggered the modal
      var topic = button.data('topic') // Extract info from data-* attributes
      var quote = button.data('quote')
      var quoted = button.data('quoted')
      var quoted_subline = button.data('quoted-subline')
      var content = button.data('content')
      var theme_tags = button.data('theme-tags')
      var context_tags = button.data('context-tags')

      var modal = $(this)      
      modal.find('#quoteEditTopic').val(topic)
      modal.find('#quoteEditContent').val(content)
      var content_len = $('#quoteEditContent').val().length
      modal.find('#quoteEditContentCharNum').text(content_len + " characters")
      modal.find('#quoteEditQuote').val(quote)
      modal.find('#quoteEditQuoted').val(quoted)
      modal.find('#quoteEditQuotedSubline').val(quoted_subline)
      
      modal.find('#modalTopicTitle').text(topic)
      modal.find('#elementQuote').text(quote)
      modal.find('#elementQuoted').text(quoted)
      modal.find('#elementQuotedSubline').text(quoted_subline)
      modal.find('#elementContent').text(content)
    })
  

// $('#theme_tags').textext({ plugins : 'tags' });
// $('#context_tags').textext({ plugins : 'tags' });
</script>