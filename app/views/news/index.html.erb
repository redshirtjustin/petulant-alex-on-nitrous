<%- model_class = Story -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:subject) %></th>
      <th><%= model_class.human_attribute_name(:mast_url) %></th>
      <th><%= model_class.human_attribute_name(:thumb_url) %></th>
      <th><%= model_class.human_attribute_name(:active_headline_id) %></th>
      <th><%= model_class.human_attribute_name(:active_leadline_id) %></th>
      <th><%= model_class.human_attribute_name(:section_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |story| %>
      <tr>
        <td><%= link_to story.id, story_path(story) %></td>
        <td><%= story.subject %></td>
        <td><%= story.mast_url %></td>
        <td><%= story.thumb_url %></td>
        <td><%= story.active_headline_id %></td>
        <td><%= story.active_leadline_id %></td>
        <td><%= story.section_id %></td>
        <td><%=l story.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_story_path(story), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      story_path(story),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>